
<%= render 'shared/navbar' %>
<div class="content">
<div class="container mt-9">
  <div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="bookings"><h1>My offers</h1></div>
            <div class="cards-dashboard">
            <% @offers.each do |offer| %>
              <div class="card" style="width: 18rem;">
              <%= link_to offer_path(offer) do %>
              <% if offer.photo.attached? %>
              <%= cl_image_tag offer.photo.key, class: "card-img-top" %>
              <% else %>
              <% placeholder_url = "https://images.unsplash.com/photo-1526401485004-46910ecc8e51?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" %>
              <%= image_tag placeholder_url, class: "card-img-top" %>
              <% end %>
              <% end %>
                <div class="card-body">
                  <h5 class="card-title"><%= offer.title %></h5>
                  <hr>
                  <h5 class="price"><%= offer.price %>€</h5>
                </div>
              </div>
            <% end %>
        </div>
            <div class="bookings"><h1>My bookings</h1></div>
            <div class="cards-dashboard">
            <% @bookings.each do |booking| %>
              <div class="card" style="width: 18rem;">
              <%= link_to offer_path(booking.offer) do %>
              <% if booking.offer.photo.attached? %>
              <%= cl_image_tag booking.offer.photo.key,class: "card-img-top" %>
              <% else %>
              <% placeholder_url = "https://images.unsplash.com/photo-1526401485004-46910ecc8e51?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" %>
              <%= image_tag placeholder_url, class: "card-img-top" %>
              <% end %>
              <% end %>
                <div class="card-body">
                  <h5 class="card-title"><%= booking.offer.title %></h5>
                  <hr>
                  <h5 class="price"><%= booking.offer.price %>€</h5>
                </div>
              </div>
            <% end %>
        </div>
  </div>
  </div>
</div>

</div>

<%= render 'shared/footer' %>
