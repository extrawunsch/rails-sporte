
<div class="grid-system mt-5">
<h1>All offers</h1>
<div class="cards m-5">
  <% @offers.each do |offer| %>
  <div class="card" style="width: 18rem;">
    <%= link_to "", offer_path(offer), class: "card-img-top", style: "background-image: url(https://source.unsplash.com/collection/8271503)"%>
    <div class="card-body">
      <h5 class="card-title"><%= offer.title %></h5>
      <p class="card-text"><%= offer.description %></p>
      <h5><%= "#{offer.price}â‚¬ / day" %></h5>
    </div>
  </div>
  <% end %>
</div>
<%= link_to 'Add an offer', new_offer_path, class: 'btn btn-primary' %>
</div>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>