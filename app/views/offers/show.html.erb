<%= render 'shared/navbar' %>
<div class="container m-5">
    <div class="offer-title">
      <h1><%= @offer.title %></h1>
      <hr>
    </div>
    <div class="overview d-flex justify-content-between">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active" id="overflow">
            <img class="d-block w-100" src="https://images.unsplash.com/photo-1597075941308-6215ddcf6c39?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80" alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="https://images.unsplash.com/photo-1597075941308-6215ddcf6c39?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80" alt="Second slide">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <div class="overview-description d-flex justify-content-between m-3">
        <div class="content-category">
          <i class="fas fa-volleyball-ball"></i>
          <h3><%= @offer.category %></h3>
          <p><%= "Pick up at #{@offer.pick_up_at}" %></p>
        </div>
        <p><%= @offer.description %></p>
        <div class="booking">
          <h3><%= "#{@offer.price} â‚¬/ day" %></h3>
          <%= link_to 'Book now', new_offer_booking_path(@offer), class: 'btn btn-success'%>
        </div>
      </div>
    </div>  
    <hr>
</div>